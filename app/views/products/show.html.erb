<p id="notice"><%= notice %></p>

<div class="well">

  <p>
    <strong><%= @product.name %></strong>
    
  </p>

  <p>
    <%= image_tag @product.image.url %>
  </p>

  <p>
    <strong><%= number_to_currency @product.price %></strong>
    
  </p>

<!--   <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p> -->

  <p>

    <%= @product.description %>
  </p>

  <p>
    <b>Brand</b>: <%= link_to "#{@product.brand}",  branding_path(brand: @product.brand)  %>
  </p>

  <p>
    <b>Product Rating</b>:<%= "#{@product.rating }" %>/10 
  </p>

  <p>
    <b>Category</b>: <%= link_to "#{@product.category.name}", categorical_path(category_id: @product.category.id) %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

</div>